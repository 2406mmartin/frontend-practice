---
import ArrowButton from '../buttons/Arrow.astro';

interface Props {
	title: string
	description: string
    image: string
	action: string
	url: string
}

const { title, description, image, action, url } = Astro.props
---

<div
	class=`w-full border-4 border-white bg-cover bg-center`
	style=`background-image: url(${image});`
>
	<div class="w-fit bg-white">
		<div class="px-4 py-8">
			<div class="text-lg font-bold text-neutral-900">{title}</div>
			<div class="text-sm text-neutral-900">{description}</div>
		</div>
	</div>
	<ArrowButton title={action} url={url}></ArrowButton>
</div>
