---
import ArrowButton from '../../components/buttons/Arrow.astro';

interface Props {
	title: string;
	description: string;
	url: string;
}

const { title, description, url } = Astro.props;
---

<div class="">
	<div class="bg-white py-8 px-4 flex flex-col gap-4 border-4 border-neutral-900 border-b-0">
		<div class="text-lg font-bold text-neutral-900">{title}</div>
		<div class="text-sm text-neutral-900">{description}</div>
	</div>
	<ArrowButton title="Read Article" fit="w-full" url={url}></ArrowButton>
</div>