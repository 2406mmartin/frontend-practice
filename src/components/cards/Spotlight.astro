---
import Button from '../buttons/Button.astro'

interface Props {
	title: string
	description: string
	image: string
	action: string
	url: string
}

const { title, description, image, action, url } = Astro.props
---

<div class="">
	<div class=`py-32 px-4 flex justify-center border-4 border-white border-b-0` style=`background-image: url(${image});`>
		<Button title={action} url={url} />
	</div>
	<div class="bg-white py-8 px-4 flex flex-col">
		<div class="text-lg font-bold text-neutral-900">{title}</div>
		<div class="text-sm text-neutral-900">{description}</div>
	</div>
</div>