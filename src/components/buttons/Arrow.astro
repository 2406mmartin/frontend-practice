---
interface Props {
	title: string
	fit?: string
	url: string
}

const { title, fit = 'w-fit', url } = Astro.props
---

<a
	href=`${url}`
	class=`text-md group flex ${fit} flex-row gap-2 bg-neutral-900 px-4 py-2 font-medium text-white`
>
	<div class="flex flex-row items-center gap-2 transition duration-200 group-hover:translate-x-2">
		{title}
		<svg
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 24 24"
			stroke-width="3"
			stroke="currentColor"
			class="size-4"
		>
			<path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
			></path>
		</svg>
	</div>
</a>