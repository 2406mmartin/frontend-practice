---
import Layout from '../Layout.astro'
import Nav from '../common/Nav.astro'
import Prose from '../../components/Prose.astro'
import SocialButton from '../../components/buttons/Social.astro'
import ArrowButton from '../../components/buttons/Arrow.astro'
import Footer from '../common/Footer.astro'

const { frontmatter } = Astro.props
---

<Layout title=`${frontmatter.name}`>
	<Nav />
	<section class="flex w-full flex-col justify-center bg-white shadow-2xl">
		<div class="container mx-auto flex flex-col items-center gap-2 px-4 py-8">
			<h1 class="text-center text-4xl font-bold text-neutral-900">{frontmatter.name}</h1>
			<h2 class="text-md flex flex-row items-center gap-2 text-center text-neutral-900">
				A registered <img
					class="h-8 brightness-0"
					src="../../../public/branding/Logo Extended Invert 512x123.png"
				/> gym.
			</h2>
		</div>
	</section>
    <section class="relative w-full h-96 bg-white justify-center bg-center bg-cover border-4 border-t-0 border-white" style=`background-image: url(${frontmatter.image});`>
        <div class="absolute left-0 bottom-0 bg-white px-2 py-2">
            <SocialButton type="discord" url="discord.gg/cool"></SocialButton>
        </div>
    </section>
	<section class="flex w-full flex-col justify-center bg-neutral-900">
		<div
			class="container mx-auto flex min-h-screen flex-col justify-between gap-8 bg-neutral-950 px-4 pb-4 pt-8"
		>
			<Prose>
				<slot />
			</Prose>
			<ArrowButton title="Find More Towns" url="." />
		</div>
	</section>
	<Footer />
</Layout>