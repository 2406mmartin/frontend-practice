---
import Layout from '../Layout.astro'
import Nav from '../common/Nav.astro'
import Prose from '../../components/Prose.astro'
import ArrowButton from '../../components/buttons/Arrow.astro'
import Footer from '../common/Footer.astro'

const { frontmatter } = Astro.props
---

<Layout title=`${frontmatter.title}`>
	<Nav />
	<section class="flex w-full flex-col justify-center bg-white shadow-2xl">
		<div class="container mx-auto flex flex-col items-center gap-2 px-4 py-8">
			<h1 class="text-center text-4xl font-bold text-neutral-900">{frontmatter.title}</h1>
			<h3 class="text-center text-sm font-light text-neutral-900">
				Last Updated Â· {frontmatter.updated}
			</h3>
			<h2 class="text-md flex flex-row items-center gap-2 text-center text-neutral-900">
				An official <img
					class="h-8 brightness-0"
					src="../../../public/branding/Logo Extended Invert 512x123.png"
				/> publication.
			</h2>
		</div>
	</section>
	<section class="flex w-full flex-col justify-center bg-neutral-900">
		<div
			class="container mx-auto flex min-h-screen flex-col justify-between gap-8 bg-neutral-950 px-4 pb-4 pt-8"
		>
			<Prose>
				<slot />
			</Prose>
			<ArrowButton title="Find More Articles" url="." />
		</div>
	</section>
	<Footer />
</Layout>
