---
import ShowcaseCard from '../../components/cards/Showcase.astro'
---

<section class="flex w-full flex-col items-center gap-8 bg-neutral-800">
	<div class="container flex w-full flex-col gap-8 px-4 py-16">
		<h1 class="text-2xl font-bold text-white">Explore our community 🤝</h1>
		<ShowcaseCard
			title="Towns"
			description="Connect with large communities."
			image='../../../src/images/community/town-showcase.png'
			action="Find Towns"
			url="/community/towns"
		/>
		<ShowcaseCard
			title="Gyms"
			description="Test your skills and experience."
			image='../../../src/images/community/gym-showcase.png'
			action="Find Gyms"
			url="/community/gyms"
		/>
	</div>
</section>